<?xml version="1.0" encoding="UTF-8"?>
<project name="module_fizz-buzz" default="compile.module.fizz-buzz">
  <dirname property="module.fizz-buzz.basedir" file="${ant.file.module_fizz-buzz}"/>
  
  <property name="module.jdk.home.fizz-buzz" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.fizz-buzz" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.fizz-buzz" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.fizz-buzz" value="-encoding UTF-8 -source 1.7 ${compiler.args}"/>
  
  <property name="fizz-buzz.output.dir" value="${module.fizz-buzz.basedir}/out/production/fizz-buzz"/>
  <property name="fizz-buzz.testoutput.dir" value="${module.fizz-buzz.basedir}/out/test/fizz-buzz"/>
  
  <path id="fizz-buzz.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="fizz-buzz.module.production.classpath">
    <path refid="${module.jdk.classpath.fizz-buzz}"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${idea.home}/lib/hamcrest-library-1.3.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.11.jar"/>
  </path>
  
  <path id="fizz-buzz.runtime.production.module.classpath">
    <pathelement location="${fizz-buzz.output.dir}"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${idea.home}/lib/hamcrest-library-1.3.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.11.jar"/>
  </path>
  
  <path id="fizz-buzz.module.classpath">
    <path refid="${module.jdk.classpath.fizz-buzz}"/>
    <pathelement location="${fizz-buzz.output.dir}"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${idea.home}/lib/hamcrest-library-1.3.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.11.jar"/>
  </path>
  
  <path id="fizz-buzz.runtime.module.classpath">
    <pathelement location="${fizz-buzz.testoutput.dir}"/>
    <pathelement location="${fizz-buzz.output.dir}"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${idea.home}/lib/hamcrest-library-1.3.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.11.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.fizz-buzz">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.fizz-buzz">
    <patternset refid="excluded.from.module.fizz-buzz"/>
  </patternset>
  
  <path id="fizz-buzz.module.sourcepath">
    <dirset dir="${module.fizz-buzz.basedir}">
      <include name="src/main"/>
    </dirset>
  </path>
  
  <path id="fizz-buzz.module.test.sourcepath">
    <dirset dir="${module.fizz-buzz.basedir}">
      <include name="src/test"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.fizz-buzz" depends="compile.module.fizz-buzz.production,compile.module.fizz-buzz.tests" description="Compile module fizz-buzz"/>
  
  <target name="compile.module.fizz-buzz.production" depends="register.custom.compilers" description="Compile module fizz-buzz; production classes">
    <mkdir dir="${fizz-buzz.output.dir}"/>
    <javac2 destdir="${fizz-buzz.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.fizz-buzz}/javac">
      <compilerarg line="${compiler.args.fizz-buzz}"/>
      <bootclasspath refid="fizz-buzz.module.bootclasspath"/>
      <classpath refid="fizz-buzz.module.production.classpath"/>
      <src refid="fizz-buzz.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.fizz-buzz"/>
    </javac2>
    
    <copy todir="${fizz-buzz.output.dir}">
      <fileset dir="${module.fizz-buzz.basedir}/src/main">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.fizz-buzz.tests" depends="register.custom.compilers,compile.module.fizz-buzz.production" description="compile module fizz-buzz; test classes" unless="skip.tests">
    <mkdir dir="${fizz-buzz.testoutput.dir}"/>
    <javac2 destdir="${fizz-buzz.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.fizz-buzz}/javac">
      <compilerarg line="${compiler.args.fizz-buzz}"/>
      <bootclasspath refid="fizz-buzz.module.bootclasspath"/>
      <classpath refid="fizz-buzz.module.classpath"/>
      <src refid="fizz-buzz.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.fizz-buzz"/>
    </javac2>
    
    <copy todir="${fizz-buzz.testoutput.dir}">
      <fileset dir="${module.fizz-buzz.basedir}/src/test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.fizz-buzz" description="cleanup module">
    <delete dir="${fizz-buzz.output.dir}"/>
    <delete dir="${fizz-buzz.testoutput.dir}"/>
  </target>
</project>